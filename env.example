# Environment Configuration
ENVIRONMENT=development  # development, staging, production

# Google Cloud SQL Configuration
USE_CLOUD_SQL=false
CLOUD_SQL_CONNECTION_NAME=your-project:region:instance-name
CLOUD_SQL_DATABASE_NAME=fastinnovation
CLOUD_SQL_USERNAME=postgres
CLOUD_SQL_PASSWORD=your-cloud-sql-password

# Local PostgreSQL Configuration (fallback/development)
POSTGRES_HOST=localhost
POSTGRES_DB=fastinnovation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Firebase Configuration (for user authentication)
FIREBASE_API_KEY=your-firebase-web-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/

# Firebase Admin SDK (for server-side operations)
FIREBASE_CREDENTIALS_PATH=path/to/serviceaccount.json
# OR use inline JSON (for production environments)
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Application Configuration
SECRET_KEY=your-secret-key-here

# API Configuration
# Analytics/Admin API URLs
ADMIN_API_URL_LOCAL=http://localhost:8000/api/v1
ADMIN_API_URL_PRODUCTION=https://fireportes-production.up.railway.app/api/v1
FI_ANALYTICS_API_KEY=your-analytics-api-key

# FILC Agent API URLs and Authentication
FILC_API_URL_LOCAL=http://localhost:3000
FILC_API_URL_PRODUCTION=https://filc-production.up.railway.app
FILC_API_KEY=your-filc-api-key

# Analytics API Configuration (legacy - keeping for backwards compatibility)
ANALYTICS_API_URL=http://localhost:8000
ANALYTICS_API_KEY=your-analytics-api-key 